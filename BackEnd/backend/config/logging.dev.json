{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s | %(levelname)7s | %(name)s | %(module)s.%(funcName)s:%(lineno)d - %(message)s",
            "use_colors": null
        },
        "simple": {
            "format": "%(levelname)s %(message)s"
        }
    },
    "handlers": {
        "stderr": {
            "level": "DEBUG",
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stderr"
        },
        "stdout": {
            "level": "DEBUG",
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "loguru": {
            "class": "backend.utils.loguru_handler.InterceptHandler"
        }
    },
    "loggers": {
        "fastapi": {
            "handlers": [
                "loguru"
            ],
            "level": "DEBUG"
        },
        "tortoise": {
            "handlers": [
                "loguru"
            ],
            "level": "WARNING"
        },
        "apscheduler": {
            "handlers": [
                "loguru"
            ],
            "level": "INFO"
        },
        "uvicorn": {
            "handlers": [
                "loguru"
            ],
            "level": "INFO"
        },
        "uvicorn.error": {
            "handlers": [
                "loguru"
            ],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn.access": {
            "handlers": [
                "loguru"
            ],
            "level": "INFO",
            "propagate": false
        }
    }
}